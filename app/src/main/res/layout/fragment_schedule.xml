<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.schedule.ScheduleFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/primary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horario Semanal"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Octubre 2023"
                        android:textSize="12sp"
                        android:textColor="@color/textHint" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



    <!-- Scrollable timetable -->
    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Days Header -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <!-- Empty corner -->
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Lunes"
                    android:textSize="10sp"
                    android:textColor="#9ca3af"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Martes"
                    android:textSize="10sp"
                    android:textColor="#9ca3af"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Miercoles"
                    android:textSize="10sp"
                    android:textColor="#9ca3af"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Jueves"
                    android:textSize="10sp"
                    android:textColor="#9ca3af"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Viernes"
                    android:textSize="10sp"
                    android:textColor="#9ca3af"
                    android:textStyle="bold"/>

                <!-- Repetir para Mar, Mié, Jue, Vie, Sáb... -->
            </LinearLayout>

            <!-- Hourly rows -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Hour labels -->
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="08:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="09:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="09:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="10:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="11:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="12:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="13:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="14:00"
                        android:textSize="10sp"
                        android:textColor="#9ca3af"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|center_horizontal"/>
                </LinearLayout>

                <!-- Day columns -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Matemáticas"
                            android:textSize="12sp"
                            android:textColor="#007aff"
                            android:layout_height="60dp"
                            android:padding="4dp"
                            android:background="#007aff1A"/>
                    </LinearLayout>

                    <!-- Repetir para otras clases o días -->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>